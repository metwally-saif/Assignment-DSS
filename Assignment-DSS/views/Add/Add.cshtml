@using Assignment_DSS.modules
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor context
@model Posts


<div class="container contact">
	<div class="row">
		<div class="col-md-3">
			<div class="Post-info">
				<h2>Make your post</h2>
				<h4>We would love to hear from you !</h4>
			</div>
		</div>
		<div class="col-md-9">
			<div class="Post-form">
				<form method="post" asp-action="Add" asp-controller="Add">
					<div class="form-group">
						<label asp-for="Title" class="control-label col-sm-2">Title:</label>
						<div class="col-sm-10">
							<input name="Title" asp-for="Title" type="text" class="form-control" placeholder="Enter the post's Title'">
						</div>
					</div>
					<div class="form-group">
						<label asp-for="Img" class="control-label col-sm-2">Image URL:</label>
						<div class="col-sm-10">
							<input name="Img" asp-for="Img" type="text" class="form-control" placeholder="Enter Image URL:">
						</div>
					</div>
					<div class="form-group">
						<label asp-for="Body" class="control-label col-sm-2">Body:</label>
						<div class="col-sm-10">
							<textarea name="Body" asp-for="Body" class="form-control" rows="5"></textarea>
						</div>
					</div>
					<div class="form-group">
						<div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
							<button type="submit" class="btn btn-primary btn-lg">Submit</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


