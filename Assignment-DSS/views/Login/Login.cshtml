@using Assignment_DSS.modules
@model UserDTO


@{
    if (TempData["fail"] != null) {
        <div class="alert alert-danger">
            <p class="lead">@TempData["fail"]</p>
        </div>
};
}

<form method="post" asp-action="Login" asp-controller="Login">
    <div class="form-outline mb-4">
        <input name="Name" asp-for="Name" id="form2Example1" class="form-control" />
        <label asp-for="Name" class="form-label" for="form2Example1">Email address</label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-outline mb-4">
        <input name="Password" asp-for="Password" type="password" id="form2Example2" class="form-control" />
        <label asp-for="Password" class="form-label" for="form2Example2">Password</label>
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

    <!-- Register buttons -->
    <div class="text-center">
        <p>Not a member? <a href="#!">Register</a></p>
    </div>
</form>